<%- model_class = Package -%>

<!-- Header -->
<% unless params[:header] == 'no' %>
  <header id="top" class="header" style="height: 30%;background: url(/images/events.jpg) no-repeat 50% 90% scroll;background-size: 100%;">
      <div class="row text-vertical-center">
        <a href="/"><img src="/images/quicktrip_logo_site.png" style="height: 150px;"></a>
      </div>
  </header>
<% end %>
<!-- Search -->
<section id="search" class="search" style="background-color: #f6f6f6;text-align: center;">
    <div class="container">
      <div class="row">
        <p style="color: #EBC515;text-shadow: 2px 3px 5px #545454;font-size: 40px;">
          <%=t '.title', :default => @package.package_type.package_type.titleize %>
          <div class="btn-link" style="position: relative;top: -40px;right: 20px;text-align: right;">
            <a href="/">Voltar</a>
          </div>
        </p>
			<div class="fieldset">
				<h3 style="color: #8C7927;text-shadow: 1px 2px 3px #949494;"><%= @package.description %></h3>
			</div>
  <!--
      <IFRAME src="<%= 
      # "#{ENV['SEARCH_URL']}/pesquisar#{ENV['AFFILIATE_TOKEN']}&#{@package.link}" 
      %>" style='width: 100%;min-height: 600px;margin: auto;text-align: center;border: 1px solid #444;margin-top: 5px;border-radius: 15px;padding:10px'></IFRAME>
      -->
    </div>

    <div class="panel-group" id="accordion">
      <% i = 0 %>
      <% @package_items.each do |pack_item| %>
        <% i = i+1 %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <% if pack_item.pack_type == 2 %>
                <%= link_to pack_item.item, package_package_item_url(@package.id,pack_item.id), target: "_blank"  %>
              <% else %>
                <%= link_to pack_item.item, pack_item.link, target: "_blank"  %>
              <% end %>
            </h4>
          </div>
          <div class="panel-body">
            <div class="row" style="margin-bottom: 20px ">
              <div class="col-md-4 col-sm-4 col-xs-4">
                <% if pack_item.pack_type == 2 %>
                  <%= link_to image_tag(pack_item.image, width: "200px", height: "200px", class: "img-thumbnail"), package_package_item_url(@package.id,pack_item.id), target: "_blank"  %>
                <% else %>
                  <%= link_to( image_tag(pack_item.image, width: "200px", height: "200px", class: "img-thumbnail"), pack_item.link, target: "_blank" ) %>
                <% end %>
              </div>
              <div class="col-md-8 col-sm-8 col-xs-8">
              <% if pack_item.pack_type == 2 %>
                <%= link_to pack_item.description, package_package_item_url(@package.id,pack_item.id), target: "_blank"  %>
              <% else %>
                <%= link_to pack_item.description, pack_item.link, target: "_blank" %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</section>

